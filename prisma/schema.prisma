generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// modelo colaborador
model Colaborador {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produto {
  id String @id @default(cuid())
  name String
  description String?
  imageurl String?
  precoUnitario Float
  estoque       Float     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rentals Aluguel[]
}

model Cliente {
  id String @id @default(cuid())
  name String
  Email String @unique
  cpf String @unique
  phone String?
  adress String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rentals Aluguel[]
}

model Aluguel {
  id          String    @id @default(cuid())
  startDate   DateTime
  endDate     DateTime
  quantidade  Float     
  totalPrice  Float
  status      StatusAluguel @default(ATIVO)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  produtoId   String
  produto     Produto   @relation(fields: [produtoId], references: [id])
  clienteId   String
  cliente     Cliente   @relation(fields: [clienteId], references: [id])
}

enum StatusAluguel {
  ATIVO
  ATRASADO
  CONCLUIDO
  CANCELADO
}

enum RentalStatus{
  AGENDADO
  ALUGADO
  CONCLUIDO
  CANCELADO
}