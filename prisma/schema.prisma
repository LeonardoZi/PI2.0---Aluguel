// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// modelo colaborador
model Colaborador {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// modelo m√°quinas
model Produto {
  id String @id @default(cuid())
  name String
  description String?
  imageurl String?
  pricePerDay Float
  status ProdutoStatus @default(DISPONIVEL)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rentals Aluguel[]
}

model Cliente {
  id String @id @default(cuid())
  name String
  Email String @unique
  cpf String @unique
  phone String?
  adress String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rentals Aluguel[]
}

model Aluguel {
  id String @id @default(cuid())
  startDate DateTime
  endDate DateTime
  totalPrice Float
  status RentalStatus @default(AGENDADO)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  produtoId String
  produto Produto @relation(fields: [produtoId], references: [id])

  clienteId String
  cliente Cliente @relation(fields: [clienteId], references: [id])
}

enum ProdutoStatus {
  DISPONIVEL
  ALUGADO
  RESERVADO
}

enum RentalStatus{
  AGENDADO
  ALUGADO
  CONCLUIDO
  CANCELADO
}